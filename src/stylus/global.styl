html, body {
  position: relative
  width: 100vw
  height: 100vh
  min-height: 100vh
  margin: 0
  padding: 0
  -webkit-font-smoothing: antialiased
}

* {
  box-sizing: border-box
  font-family: 'Helvetica', '微軟正黑體', 'Microsoft JhengHei', '微軟雅黑體', 'Microsoft YaHei', 'sans-serif'
}

a {
  cursor: pointer

  &:hover {
    text-decoration: none
  }
}

ul, li {
  margin: 0
  padding: 0
  list-style-type: none
}

.router-link {
  text-decoration: none
}

.hide-mobile {
  display: none
  @media screen and (min-width: $mobile-break-point) {
    display: block
  }
}

.hide-pc {
  @media screen and (min-width: $mobile-break-point) {
    display: none
  }
}
